{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "lib": ["esnext", "dom", "dom.iterable"],
        "baseUrl": ".",
        "strict": true,
        "paths": {
            "@adrian.insua/ngredux-store": ["packages/store/dist/adrian.insua-ngredux-store", "packages/store/dist"],
            "@adrian.insua/ngredux-form": ["packages/form/dist/adrian.insua-ngredux-form", "packages/form/dist"],
            "@adrian.insua/ngredux-router": ["packages/router/dist/adrian.insua-ngredux-router", "packages/router/dist"]
        },
        "sourceMap": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "declaration": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "preserveSymlinks": true,
        "noUnusedParameters": true,
        "pretty": true
    }
}
