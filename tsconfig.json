{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "lib": ["esnext", "dom", "dom.iterable"],
        "baseUrl": ".",
        "strict": true,
        "paths": {
            "@adrian.insua/ngredux-store": ["packages/store/src/index.ts"],
            "@adrian.insua/ngredux-form": ["packages/form/source/index.ts"],
            "@adrian.insua/ngredux-router": ["packages/router/src/index.ts"]
        },
        "sourceMap": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "declaration": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "pretty": true
    }
}
