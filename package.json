{
  "name": "platform",
  "private": true,
  "scripts": {
    "store": "lerna run --scope=@adrian.insua/ngredux-store --parallel",
    "form": "lerna run --scope=@adrian.insua/ngredux-form --parallel",
    "router": "lerna run --scope=@adrian.insua/ngredux-router --parallel",
    "build": "lerna run build --stream",
    "clean": "npm-run-all -p clean:*",
    "clean:deps": "npm-run-all -p clean:deps:*",
    "clean:deps:workspace": "rimraf node_modules",
    "clean:deps:packages": "rimraf packages/*/node_modules",
    "clean:coverage": "rimraf coverage",
    "clean:dist": "rimraf packages/*/dist",
    "docs": "docsify serve ./docs",
    "lint": "eslint packages/**/*.{js,ts} --fix",
    "test": "jest --coverage",
    "test:ci": "jest --coverage --ci --maxWorkers=2",
    "test:watch": "jest --watch",
    "commit": "commit",
    "postinstall": "ngcc && npm run bootstrap",
    "bootstrap": "lerna bootstrap --force-local",
    "semantic-release": "lerna exec --concurrency 1 -- npx semantic-release -e semantic-release-monorepo"
  },
  "lint-staged": {
    "*.{ts,js,css,scss,json,md}": [
      "eslint --fix",
      "git add"
    ]
  },
  "engines": {
    "node": ">=8"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.2.7",
    "@angular/animations": "12.2.7",
    "@angular/cli": "12.2.7",
    "@angular/common": "12.2.7",
    "@angular/compiler": "12.2.7",
    "@angular/compiler-cli": "12.2.7",
    "@angular/core": "12.2.7",
    "@angular/forms": "12.2.7",
    "@angular/platform-browser": "12.2.7",
    "@angular/platform-browser-dynamic": "12.2.7",
    "@angular/router": "12.2.7",
    "@babel/core": "^7.13.3",
    "@commitlint/cli": "7.3.2",
    "@commitlint/config-conventional": "7.3.1",
    "@commitlint/prompt-cli": "7.3.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.0.5",
    "@semantic-release/npm": "^7.0.5",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@types/jest": "23.3.13",
    "@typescript-eslint/eslint-plugin": "4.22.0",
    "@typescript-eslint/eslint-plugin-tslint": "4.22.0",
    "@typescript-eslint/parser": "4.22.0",
    "babel-jest": "23.6.0",
    "codelyzer": "4.5.0",
    "docsify-cli": "4.3.0",
    "eslint": "^7.22.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "1.3.1",
    "jest": "23.6.0",
    "jest-junit": "6.0.1",
    "jest-preset-angular": "6.0.2",
    "jest-zone-patch": "0.0.10",
    "lerna": "^4.0.0",
    "lint-staged": "8.1.0",
    "ng-packagr": "^12.2.2",
    "npm-run-all": "4.1.5",
    "prettier": "1.15.3",
    "redux": "4.0.1",
    "rimraf": "2.6.3",
    "rxjs": "7.3.0",
    "semantic-release": "^17.0.6",
    "semantic-release-monorepo": "^7.0.5",
    "ts-node": "~8.3.0",
    "tsickle": "0.34.0",
    "tslib": "^2.0.0",
    "tslint": "~6.1.0",
    "typescript": "~4.3.5",
    "zone.js": "~0.11.4"
  },
  "version": "10.2.0"
}
