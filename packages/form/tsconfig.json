{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "inlineSourceMap": true,
    "noEmitHelpers": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": ""
  },
  "awesomeTypescriptLoaderOptions": {
    "emitRequireType": false,
    "useBabel": true,
    "useCache": false
  },
  "exclude": [
    "node_modules",
    "dist",
    "examples",
    "index.d.ts"
  ]
}
