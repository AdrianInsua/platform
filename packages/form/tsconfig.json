{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "inlineSourceMap": true,
    "noEmitHelpers": true,
    "declaration": true
  },
  "awesomeTypescriptLoaderOptions": {
    "emitRequireType": false,
    "useBabel": true,
    "useCache": false
  },
  "exclude": [
    "node_modules",
    "dist",
    "examples"
  ]
}
