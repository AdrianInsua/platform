{
  "packages": ["packages/*"],
  "version": "0.0.1",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "ignoreChanges": ["**/*.spec.ts", "**/*.md"],
  "command": {
    "init": {
      "exact": true
    },
    "publish": {
      "npmClient": "yarn",
      "allowBranch": "master",
      "contents": "dist"
    },
    "version": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "exact": true,
      "message": "chore(release): publish %s",
      "signGitCommit": true,
      "signGitTag": true
    }
  }
}
